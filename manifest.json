{
    "manifest_version": 3,
    "name": "FPL Layout Tweaker",
    "version": "1.0",
    "description": "Adds persistent classes to FPL layout sections for easier styling.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://fantasy.premierleague.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["loader.css"],
        "matches": ["https://fantasy.premierleague.com/*"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/icon.svg"
    }
  }